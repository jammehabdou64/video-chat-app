{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false, // <-- turn off .d.ts generation
    "declarationMap": false, // <-- turn off declaration maps
    "esModuleInterop": true,
    "outDir": "./build",
    "strict": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "resources/js"]
}
